{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"allowImportingTsExtensions": true
	},
	"include": ["bin/**/*.ts", "shared/**/*.ts", "scripts/**/*.ts", "tests/**/*.ts"],
	"exclude": ["bin/cc-inspect", "node_modules", "dist"]
}
