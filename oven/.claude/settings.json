{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Edit|MultiEdit|Write",
				"hooks": [{ "type": "command", "command": "bun fmt" }]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "$CLAUDE_PROJECT_DIR/oven/scripts/sync-readme.ts"
					}
				]
			}
		]
	}
}
