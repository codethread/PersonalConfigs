{
	"name": "oven",
	"private": true,
	"scripts": {
		"fmt": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check .",
		"fix": "biome check --write --unsafe --log-level=error .",
		"test": "bun test tests",
		"typecheck": "tsc --noEmit",
		"build": "bun run ./scripts/build-bin.ts",
		"sync-docs": "bun run ./scripts/sync-readme.ts",
		"verify": "bun run fix && bun run test && bun run typecheck && bun run build && bun run sync-docs"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
