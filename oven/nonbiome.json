{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useMaxParams": {
          "level": "error",
          "options": { "max": 3 }
        }
      },
      "style": {
        "useAtIndex": "error",
        "noCommonJs": "error",
        "noDefaultExport": "error",
        "noInferrableTypes": "error",
        "noNonNullAssertion": "error",
        "noProcessEnv": "error",
        "useAsConstAssertion": "error"
      },
      "suspicious": {
        "noConsole": "error",
        "noFocusedTests": "error",
        "noSkippedTests": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["tests/**/*.test.ts"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    }
  ],
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
