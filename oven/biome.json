{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"files": {
		"includes": ["bin/**/*.ts", "scripts/**/*.ts", "shared/**/*.ts", "tests/**/*.ts", "*.json", "*.ts"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useNodejsImportProtocol": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 110
	},
	"javascript": {
		"formatter": {
			"bracketSpacing": false
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": false
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
