{
  "editor.scrollBeyondLastLine": false,
  "editor.cursorStyle": "block",
  "editor.fontFamily": "'FiraCode Nerd Font','Roboto Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "blink",
  "editor.dragAndDrop": true,
  "explorer.confirmDragAndDrop": true,
  "editor.fontSize": 13,
  "editor.fontWeight": "500",
  "editor.formatOnType": true,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.rulers": [100],
  "editor.wordWrap": "on",
  "eslint.run": "onType",
  "files.insertFinalNewline": true,
  "files.exclude": {
    ".history/": true,
    ".idea/": true,
    ".tags": true,
    ".vscode/": false,
    "**/*.swp": true,
    "**/*~": true,
    "node_modules/": true
  },
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "scss.validate": false,
  "terminal.integrated.cursorBlinking": false,
  "window.newWindowDimensions": "maximized",
  "window.openFoldersInNewWindow": "on",
  "window.restoreWindows": "all",
  "window.title": "${rootName}${separator}${activeEditorMedium}",
  "window.titleBarStyle": "custom",
  "workbench.fontAliasing": "auto",
  "workbench.editor.enablePreview": false,
  "workbench.editor.openPositioning": "last",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "stylelint.validate": [
    "css",
    "scss",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // "workbench.colorCustomizations": {
  //   "editorWarning.foreground": "#ff0",
  //   "editorInfo.foreground": "#00f"
  // },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/dist": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  //////// VIM
  "vim.showmodename": true,
  "vim.easymotion": true,
  "vim.sneak": false,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // {
    //   "before": ["<leader>", "m"],
    //   "commands": [
    //     "bookmarks.toggle"
    //   ]
    // },
    // {
    //   "before": ["<leader>", "b"],
    //   "commands": [
    //     "bookmarks.listFromAllFiles"
    //   ]
    // },
    {
      "before": ["s"],
      "commands": ["extension.aceJump"]
    },
    {
      "before": ["<leader>", ";"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "b", "l"],
      "commands": ["open-buffers.openBuffer"]
    },
    {
      "before": ["<leader>", "b", "k"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "o", "d"],
      "when": "editorFocus",
      "commands": ["workbench.files.action.showActiveFileInExplorer"]
    },
    {
      "before": ["<leader>", "<leader>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "e", "f"],
      "commands": ["eslint.executeAutofix"]
    },
    {
      "before": ["<leader>", "e", "n"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "e", "p"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "e", "l"],
      "commands": ["workbench.action.showErrorsWarnings"]
    },
    {
      "before": ["<leader>", "f", "r"],
      "commands": ["fileutils.renameFile"]
    },
    {
      "before": ["<leader>", "u", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "r", "r"],
      "commands": ["editor.action.refactor"],
      "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
    },
    {
      "before": ["leader", "l", "a"],
      "commands": ["editor.action.quickFix"],
      "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
    },
    // windows
    {
      "before": ["<leader>", "w", "k"],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    {
      "before": ["<leader>", "w", "o"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["<leader>", "w", "w"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
  ],
  "vsicons.dontShowNewVersionMessage": true,
  "problems.decorations.enabled": false,
  "todohighlight.keywords": [
    "XXX:",
    "DEBUG:",
    "REVIEW:",
    "NOTE:",
    {
      "text": "TODO:",
      "color": "#ffab00",
      "backgroundColor": "#2a2c2d"
    },
    {
      "text": "HACK:",
      "color": "#ff0000"
    }
  ],
  "todohighlight.defaultStyle": {
    "color": "#ffab00",
    "backgroundColor": "#2a2c2d",
    "cursor": "pointer",
    "isWholeLine": false
  },
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[rust]": {
    "editor.formatOnSave": true
  },
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "js/ts.implicitProjectConfig.checkJs": true,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cloudcode.gke": {
    "projectIds": ["my-blog-275207"]
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  // "files.autoSave": "onFocusChange",
  "files.associations": {
    ".eslintrc": "jsonc",
    "*.css": "tailwindcss"
  },
  "svelte.enable-ts-plugin": true,
  "workbench.colorTheme": "Nord",
  "editor.guides.indentation": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": true
  },
  "xstate.nestTypegenFiles": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
  },
  "editor.inlineSuggest.enabled": true,
  "workbench.iconTheme": "material-icon-theme",
  "editor.lineHeight": 1.8,
  "explorer.autoReveal": false
}
