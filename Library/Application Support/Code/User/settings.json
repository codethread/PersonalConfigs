{
  "editor.scrollBeyondLastLine": false,
  "editor.cursorStyle": "block",
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Fira Code', 'Roboto Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.autoIndent": true,
  "editor.cursorBlinking": "blink",
  "editor.dragAndDrop": true,
  "explorer.confirmDragAndDrop": true,
  "editor.fontSize": 12,
  "editor.fontWeight": "500",
  "editor.formatOnType": true,
  "editor.minimap.enabled": false,
  // "editor.smoothScrolling": true,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.rulers": [100],
  "editor.wordWrap": "on",
  "eslint.run": "onType",
  "files.insertFinalNewline": true,
  "files.exclude": {
    ".history/": true,
    ".idea/": true,
    ".tags": true,
    ".vscode/": false,
    "**/*.swp": true,
    "**/*~": true,
    "node_modules/": true
  },
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "scss.validate": false,
  "terminal.integrated.cursorBlinking": false,
  "window.newWindowDimensions": "maximized",
  "window.openFoldersInNewWindow": "on",
  "window.restoreWindows": "all",
  "window.title": "${rootName}${separator}${activeEditorMedium}",
  "window.titleBarStyle": "custom",
  "workbench.fontAliasing": "auto",
  "workbench.editor.enablePreview": false,
  "workbench.editor.openPositioning": "last",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  // "workbench.colorCustomizations": {
  //   "editorWarning.foreground": "#ff0",
  //   "editorInfo.foreground": "#00f"
  // },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/dist": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "workbench.iconTheme": "vscode-icons",
  "window.zoomLevel": 0,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  //////// VIM
  "vim.showmodename": true,
  "vim.easymotion": true,
  "vim.sneak": false,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // {
    //   "before": ["<leader>", "m"],
    //   "commands": [
    //     "bookmarks.toggle"
    //   ]
    // },
    // {
    //   "before": ["<leader>", "b"],
    //   "commands": [
    //     "bookmarks.listFromAllFiles"
    //   ]
    // },
    {
      "before": ["s"],
      "commands": ["extension.aceJump"]
    },
    {
      "before": ["<leader>", ";"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "b", "l"],
      "commands": ["open-buffers.openBuffer"]
    },
    {
      "before": ["<leader>", "b", "k"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "n"],
      "when": "editorFocus",
      "commands": ["workbench.view.explorer"]
    },
    // {
    //   "before": ["<leader>", "n"],
    //   "when": "!editorFocus",
    //   "commands": ["workbench.action.focusActiveEditorGroup"]
    // },
    {
      "before": ["<leader>", "<leader>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "e", "f"],
      "commands": ["eslint.executeAutofix"]
    },
    {
      "before": ["<leader>", "e", "n"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "e", "p"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "e", "l"],
      "commands": ["workbench.action.showErrorsWarnings"]
    },
    {
      "before": ["<leader>", "u", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "w", "k"],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    {
      "before": ["<leader>", "w", "o"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["<leader>", "w", "w"],
      "commands": ["workbench.action.splitEditor"]
    }
  ],
  // "workbench.colorCustomizations": {
  //   "statusBar.background": "#8FBCBB",
  //   "statusBar.noFolderBackground": "#8FBCBB",
  //   "statusBar.debuggingBackground": "#8FBCBB"
  // },
  "editor.lineNumbers": "relative",
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.colorTheme": "One Dark Pro",
  "problems.decorations.enabled": false,
  "editor.codeLens": false,
  "todohighlight.keywords": [
    "XXX:",
    "DEBUG:",
    "REVIEW:",
    "NOTE:",
    {
      "text": "TODO:",
      "color": "#ffab00",
      "backgroundColor": "#2a2c2d",
    },
    {
      "text": "HACK:",
      "color": "#ff0000",
    },
  ],
  "todohighlight.defaultStyle": {
    "color": "#ffab00",
    "backgroundColor": "#2a2c2d",
    "cursor": "pointer",
    "isWholeLine": false,
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[rust]": {
    "editor.formatOnSave": true
  },
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "javascript.implicitProjectConfig.checkJs": true,
}
