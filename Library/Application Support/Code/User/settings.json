{
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "off",

  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "block",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.dragAndDrop": true,
  "editor.foldingImportsByDefault": true,
  "editor.fontFamily": "'FiraCode Nerd Font','Roboto Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.fontWeight": "500",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.guides.indentation": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.8,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": true
  },
  "editor.renderLineHighlight": "all",
  "editor.rulers": [100],
  "editor.scrollBeyondLastLine": false,
  "editor.wordWrap": "on",

  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": true,
  "explorer.openEditors.visible": 0,

  "files.autoSave": "onWindowChange",
  "files.exclude": {
    ".history/": true,
    ".idea/": true,
    ".tags": true,
    ".vscode/": false,
    "**/*.swp": true,
    "**/*~": true,
    "node_modules/": true
  },
  "files.insertFinalNewline": true,
  "files.associations": {
    ".eslintrc": "jsonc",
    "*.css": "tailwindcss",

    "*.xml": "html",
    "*.svg": "html"
  },

  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",

  "problems.decorations.enabled": false,

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/dist": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },

  "terminal.integrated.cursorBlinking": false,

  "window.newWindowDimensions": "maximized",
  "window.openFoldersInNewWindow": "on",
  "window.restoreWindows": "all",
  "window.title": "${rootName}${separator}${activeEditorMedium}",
  "window.titleBarStyle": "custom",
  "workbench.statusBar.visible": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.openPositioning": "last",
  "workbench.editor.showTabs": "single",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  /** this is the default, but I can't decide if I like this or not */
  "workbench.editor.revealIfOpen": false,
  "workbench.fontAliasing": "auto",
  "workbench.iconTheme": "rose-pine-icons",
  "workbench.startupEditor": "newUntitledFile",

  // ---------------------------------------------------------------------------------
  // PLUGINS
  // ---------------------------------------------------------------------------------
  "extensions.ignoreRecommendations": true,

  "xstate.nestTypegenFiles": false,

  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "typescriptreact",
    "typescript"
  ],

  "stylelint.validate": [
    "css",
    "scss",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "scss.validate": false,

  "todohighlight.keywords": [
    "XXX:",
    "DEBUG:",
    "REVIEW:",
    "NOTE:",
    { "text": "TODO:", "color": "#ffab00", "backgroundColor": "#2a2c2d" },
    { "text": "HACK:", "color": "#ff0000" }
  ],
  "todohighlight.defaultStyle": {
    "color": "#ffab00",
    "backgroundColor": "#2a2c2d",
    "cursor": "pointer",
    "isWholeLine": false
  },

  "eslint.run": "onSave",

  "[json]": {
    // "editor.defaultFormatter": "vscode.json-language-features"
  },

  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,

  "typescript.updateImportsOnFileMove.enabled": "always",

  "[html]": {
    // "editor.defaultFormatter": "vscode.html-language-features"
  },

  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.renderColons": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.check.extraArgs": ["--target-dir", "target/check"],

  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },
  // ---------------------------------------------------------------------------------
  // VIM
  // ---------------------------------------------------------------------------------
  "vim.showmodename": true,
  "vim.ignorecase": true,
  "vim.smartcase": true,
  "vim.easymotion": false,
  "vim.sneak": false,

  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [{ "before": ["j", "k"], "after": ["<Esc>"] }],
  "vim.normalModeKeyBindingsNonRecursive": [
    // global
    {
      "before": ["<leader>", ";"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "<leader>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["s"],
      "commands": ["extension.aceJump"]
    },
    // buffers
    {
      "before": ["<leader>", "b", "l"],
      // "commands": ["workbench.action.showAllEditors"]
      "commands": ["workbench.action.showAllEditorsByMostRecentlyUsed"]
    },
    {
      "before": ["<leader>", "b", "k"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "b", "u"],
      "commands": ["unsaved-files.show"]
    },
    // open
    {
      "before": ["<leader>", "o", "d"],
      "when": "editorFocus",
      "commands": ["workbench.files.action.showActiveFileInExplorer"]
    },
    // errors
    {
      "before": ["<leader>", "e", "f"],
      "commands": ["eslint.executeAutofix"]
    },
    {
      "before": ["<leader>", "e", "n"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "e", "p"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "e", "l"],
      "commands": ["workbench.action.showErrorsWarnings"]
    },
    // files
    {
      "before": ["<leader>", "f", "r"],
      "commands": ["fileutils.renameFile"]
    },
    // utils
    {
      "before": ["<leader>", "u", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    // windows
    {
      "before": ["<leader>", "w", "k"],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    {
      "before": ["<leader>", "w", "o"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["ctrl+w", "shift+h"],
      "commands": ["workbench.action.moveEditorToLeftGroup"]
    },
    {
      "before": ["ctrl+w", "shift+l"],
      "commands": ["workbench.action.moveEditorToRightGroup"]
    },
    {
      "before": ["ctrl+w", "o"],
      "commands": ["workbench.action.editorLayoutSingle"]
    },
    {
      "before": ["<leader>", "w", "w"],
      "commands": ["workbench.action.splitEditor"]
    },
    // lsp
    {
      "before": ["leader", "l", "a"],
      "commands": ["editor.action.quickFix"],
      "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
    },
    {
      "before": ["leader", "l", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
      // typescript.findAllFileReferences
    },

    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "r", "r"],
      "commands": ["editor.action.refactor"],
      "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
    },
    // marks
    {
      "before": ["m", "a"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["m", "l"],
      "commands": ["bookmarks.listFromAllFiles"]
    }
  ],
  "workbench.colorTheme": "Ros√© Pine Moon",
  "nushellLanguageServer.includeDirs": [
    "~/PersonalConfigs/Library/Application Support/nushell/scripts"
  ],
  "nushellLanguageServer.hints.showInferredTypes": false,
  "workbench.activityBar.location": "hidden"
}
