root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = tab

[*.rs]
indent_style = space
indent_size = 4

# shell
[*.{sh,zsh}]
indent_style = space
indent_size = 2

# web
[*.{json,js,jsx,ts,tsx,html,css}]
indent_style = space
indent_size = 2
