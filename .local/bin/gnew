#!/usr/bin/env zsh

# create a new branch from trunk
gnew() {
    if [ $# -eq 0 ]
    then
        echo "No arguments supplied"
    else
        echo "Creating branch $1"
        git fetch origin $(gtrunk):$(gtrunk);
        git checkout -b "$1" $(gtrunk)
        # don't want to push to gtrunk
        git branch --unset-upstream
    fi
}


