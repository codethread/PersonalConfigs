#!/usr/bin/env bash

# borrowed with love from https://github.com/ThePrimeagen/.dotfiles/blob/62eb982a12d75abbdeb6d679504382365456d75c/bin/.local/scripts/tmux-sessionizer
source "$ZDOTDIR/tmux_projects"

# if nothing is passed, use fzf to select a directory
# or if a number is passed as an argument, use the appropriate project
if [ $# -eq 0 ]; then
	selected=$(fd --max-depth=1 --type=d . ~/dev ~/dev/projects ~/dev/learn ~/dev/vendor ~/ ~/work ~/.local/share/nvim/site/pack/packer/start | fzf-tmux)
elif [[ $1 -eq 0 ]]; then
	selected=${TMUX_SESSION_PROJ_0}
elif [[ $1 -eq 1 ]]; then
	selected=${TMUX_SESSION_PROJ_1}
elif [[ $1 -eq 2 ]]; then
	selected=${TMUX_SESSION_PROJ_2}
elif [[ $1 -eq 3 ]]; then
	selected=${TMUX_SESSION_PROJ_3}
elif [[ $1 -eq 4 ]]; then
	selected=${TMUX_SESSION_PROJ_4}
elif [[ $1 -eq 5 ]]; then
	selected=${TMUX_SESSION_PROJ_5}
elif [[ $1 -eq 6 ]]; then
	selected=${TMUX_SESSION_PROJ_6}
elif [[ $1 -eq 7 ]]; then
	selected=${TMUX_SESSION_PROJ_7}
elif [[ $1 -eq 8 ]]; then
	selected=${TMUX_SESSION_PROJ_8}
elif [[ $1 -eq 9 ]]; then
	selected=${TMUX_SESSION_PROJ_9}
fi

# if no directory was selected, exit
if [[ -z $selected ]]; then
	exit 0
fi

# get the name of the selected directory
selected_name=$(basename "$selected" | tr . _)

# check if tmux is running
tmux_running=$(pgrep tmux)

# if tmux is not running, start a new session
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
	tmux new-session -s $selected_name -c $selected
	exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
	tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
