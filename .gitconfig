[user]
	email = adamhalldesigns@gmail.com
	name = codethread
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
	attributesfile = ~/.gitattributes
[pull]
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
[alias]
	lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lg = !"git lg1"
	diff-image = "!f() { cd -- \"${GIT_PREFIX:-.}\"; GIT_DIFF_IMAGE_ENABLED=1 git diff \"$@\"; }; f"
	add-commit = !git add -A && git commit
[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[github]
	user = codethread
[diff]
    tool = kitty
    guitool = kitty.gui
	; command = ~/.tooling/git-diff-image/git_diff_image
[init]
	defaultBranch = main
[merge]
	conflictstyle = diff3 # The diff3 conflict style adds a third section to your conflict markers showing the common ancestor's version of the conflicting lines. This can be incredibly helpful for understanding the context of the conflict and resolving it accurately.
[rerere]
	enabled = true
[worktree]
	guessRemote = true

[includeIf "gitdir:~/work/"] # job needs, like workspace/* so all included projects
	path = ~/work/.gitconfig

[includeIf "gitdir:~/workfiles/"] # job needs, like workspace/* so all included projects
	path = ~/work/.gitconfig

[difftool]
    prompt = false
    trustExitCode = true
# > git difftool --no-symlinks --dir-diff
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE
