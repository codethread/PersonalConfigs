{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "__CC_ENVS": "title off for kitty, builtin ripgrep to ensure my stuff is found",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "true",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "__CC_CUSTOM_ENVS_": "manpager so we can see files, CLAUDECODE tells bun.js to have less noisy cli output, ZDOTDIR avoids old shell stuff",
    "ZDOTDIR": "~/.config/zsh-claude",
    "MANPAGER": "cat",
    "CLAUDECODE": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash",
      "WebFetch",
      "WebSearch",
      "mcp__context7"
    ],
    "deny": [
      "Bash(wget*)",
      "Bash(git push:*)",
      "NotebookEdit",
      "Read(**/*.key)",
      "Read(~/*.key)",
      "Read(**/*.pem)",
      "Read(~/*.pem)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/.env.local)",
      "Read(**/.env.production)",
      "Read(**/.git/hooks/**)",
      "Read(**/id_rsa*)",
      "Read(**/secrets/**)",
      "Read(**/.netrc)",
      "Read(~/.netrc)",
    ],
    "ask": [
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(git rebase:*)",
      "Bash(git cherry-pick:*)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "~/PersonalConfigs",
      "~/.local",
      "~/.claude",
      "~/dev",
      "~/work",
      "~/workfiles"
    ]
  },
  "model": "opusplan",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "cc-hook--npm-redirect"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs git add -N 2>/dev/null || true"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cc-hook--context-injector session-start"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cc-hook--context-injector session-end"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "cc-statusline",
    "padding": 0
  },
  "enabledPlugins": {
    "logger@codethread-plugins": true
  },
  "promptSuggestionEnabled": false,
  "feedbackSurveyState": {
    "lastShownTime": 1754027278114
  }
}
