[user]
	email = adamhalldesigns@gmail.com
	name = codethread
[github]
	user = codethread
[core]
	excludesfile = ~/.config/git/ignore
	editor = nvim
[pull]
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[rerere]
	enabled = true
[worktree]
	guessRemote = true
[pager]
	# leave false or neovim will break
    difftool = false

[diff]
	# use kitty-diff with non-paged output, nice in terminal or lazy, else favour nvimdiff
    tool = kitty
	# don't be tempted to renable this as it will break neovim
    # external = difft
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE

[alias]
    # Show the original commit's changes (what you wrote)
    rc-mine = "!git -c diff.external=difft diff REBASE_HEAD^..REBASE_HEAD"
    # Show how HEAD differs from the original commit's parent
    # (what the target branch introduced)
    rc-theirs = "!git -c diff.external=difft diff REBASE_HEAD^..HEAD"

[merge]
	# The diff3 conflict style adds a third section to your conflict markers showing the common ancestor's version of the conflicting lines. This can be incredibly helpful for understanding the context of the conflict and resolving it accurately.
	conflictstyle = zdiff3
    tool = nvim
# prefer this as it will inherit existing settings and turn off diagnostics
[mergetool "nvim"]
	cmd = nvim -c "DiffviewOpen"

[includeIf "gitdir:~/work/"] # job needs, like workspace/* so all included projects
	path = ~/work/.gitconfig
[includeIf "gitdir:~/workfiles/"] # job needs, like workspace/* so all included projects
	path = ~/work/.gitconfig
