{
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "false"
  },
  "permissions": {
    "allow": [
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:sw.kovidgoyal.net)",
      "Bash(MANPAGER='cat' man:*)",
      "Bash(grep:*)",
      "Bash(kitten:*)",
      "Bash(kitty @:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(npm run:*)",
      "Bash(pnpm run:*)",
      "Bash(yarn run:*)",
      "Bash(go mod:*)",
      "Bash(go build:*)",
      "Bash(cargo check:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(cargo run:*)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.config/claude/use_npm_redirect.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "kitten notify --expire-after 10s \"Claude Code\" \"Ready for new input\""
          }
        ]
      }
    ]
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754031481441
  },
  "$schema": "https://json.schemastore.org/claude-code-settings.json"
}