{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(//Users/codethread/PersonalConfigs/**)",
      "Read(//Users/codethread/.claude/projects/-Users-codethread-PersonalConfigs/**)",
      "Bash(bun:*)",
      "Bash(timeout 5 bun run:*)",
      "Bash(./oven/bin/**)",
      "Bash(./oven/tests/**)",
      "Bash(bun bin/cindex.ts:*)",
      "Read(//Users/codethread/.cache/cindex/**)",
      "Bash(specs/get-next-spec-id.sh:*)",
      "Bash(pip install --user:*)",
      "Bash(python3 -m pip install --user:*)"
    ],
    "deny": ["Read(**/.env.local)", "Read(**/.env.production)", "Read(**/.git/hooks/**)"],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/x-hooks/check-make.sh"
          }
        ]
      }
    ],
    "SubagentStop": []
  },
  "outputStyle": "default"
}
