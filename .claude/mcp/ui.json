{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "bunx",
      "args": ["@playwright/mcp@latest", "--browser", "firefox"],
      "env": {
        "PLAYWRIGHT_BROWSER": "firefox"
      }
    },
    "figma-dev-mode-mcp-server": {
      "type": "http",
      "url": "http://127.0.0.1:3845/mcp"
    }
  }
}
